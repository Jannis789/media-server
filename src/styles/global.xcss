$body-padding: 10px max(4px, min(480px, calc(0.2 * 100vw - 115px)));
$content-padding-width: calc(10px + 0.0234 * (100vw - 560px));
/* spacing */
$big-spacing: 32px;
$normal-spacing: 22px;
$small-spacing: 10px;

body {
    margin: 0;
    padding: $body-padding;
    box-sizing: border-box;
    background-color: #ddf;
}

* {
    font-family: Arial, Helvetica, sans-serif;
    box-sizing: border-box;
}